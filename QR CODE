  <!-- ðŸ”¹ Website heading -->
  <div class="main-title">LAKSHYA PROJECT MANAGEMENT</div>

  <div class="box">
    <h2> QR Code Generator</h2>
    <input type="text" id="text" placeholder="Enter link or text" value="https://example.com"><br>
    <button id="generate">Generate</button>
    <button id="download">Download (HD)</button>

    <div id="qrcode-container">
      <div id="qrcode">Your QR will appear here</div>
    </div>

    <div class="note">Paste a link, click Generate, then Download for a print-quality PNG.</div>
  </div>

  <!-- QRCode.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
  <script>
    const textEl = document.getElementById("text");
    const qrContainer = document.getElementById("qrcode");
    const generateBtn = document.getElementById("generate");
    const downloadBtn = document.getElementById("download");
    let qr;

    function generate() {
      const text = textEl.value.trim();
      if (!text) {
        alert("Please enter text or a link");
        return;
      }
      qrContainer.innerHTML = "";

      const size = 800; // QR size
      const margin = 50; // quiet zone
      const totalSize = size + 2 * margin;

      const tempDiv = document.createElement("div");
      const tempQR = new QRCode(tempDiv, {
        text: text,
        width: size,
        height: size,
        colorDark: "#000000",
        colorLight: "#ffffff",
        correctLevel: QRCode.CorrectLevel.H
      });

      setTimeout(() => {
        const canvas = tempDiv.querySelector("canvas");
        if (!canvas) return;

        const finalCanvas = document.createElement("canvas");
        finalCanvas.width = totalSize;
        finalCanvas.height = totalSize;
        const ctx = finalCanvas.getContext("2d");

        ctx.fillStyle = "#ffffff";
        ctx.fillRect(0, 0, totalSize, totalSize);
        ctx.drawImage(canvas, margin, margin, size, size);

        qrContainer.innerHTML = "";
        qrContainer.appendChild(finalCanvas);
      }, 100);
    }

    function download() {
      const canvas = qrContainer.querySelector("canvas");
      if (!canvas) {
        alert("Generate the QR first!");
        return;
      }
      const link = document.createElement("a");
      link.href = canvas.toDataURL("image/png");
      link.download = "qrcode_hd.png";
      link.click();
    }

    generateBtn.addEventListener("click", generate);
    downloadBtn.addEventListener("click", download);
  </script>
